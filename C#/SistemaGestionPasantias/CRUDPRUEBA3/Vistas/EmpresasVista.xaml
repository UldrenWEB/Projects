                                <Setter Property="BorderBrush" TargetName="border" Value="#006936"/>
                                <Setter Property="Opacity" TargetName="border" Value="0.5"/>

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

